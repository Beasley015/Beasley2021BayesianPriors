	author = {Conn, Paul B. and Johnson, Devin S. and Williams, Perry J. and Melin, Sharon R. and Hooten, Mevin B.},
	year = {2018},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1002/ecm.1314},
	keywords = {Bayesian model checking, Bayesian P value, goodness-of-fit, hierarchical model, model diagnostics, posterior checks},
	pages = {526--542},
	file = {Full Text PDF:C\:\\Users\\beasl\\Zotero\\storage\\RQ8HC8FX\\Conn et al. - 2018 - A guide to Bayesian model checking for ecologists.pdf:application/pdf;Snapshot:C\:\\Users\\beasl\\Zotero\\storage\\VBT7I5WW\\ecm.html:text/html},
